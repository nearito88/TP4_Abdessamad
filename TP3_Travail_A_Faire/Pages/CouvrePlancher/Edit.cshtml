@page
@model TP3_Travail_A_Faire.Pages.CouvrePlancher.EditModel
@{
    ViewData["Title"] = "Modification du couvre plancher";
}

<div class="text-center">
	<h1>Modifier un produit</h1>
	<hr />
</div>


@if (Model.messageErreur.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<small>@Model.messageErreur</small>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">
	<input type="hidden" name="id" value="@Model.cP.idCouvrePlancher" />
	<div class="row mb-2">
		<label class="col-sm-3 col-form-labek">Nom</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="nom" value="@Model.cP.nomCouvrePlancher" />
		</div>
	</div>

	<div class="row mb-2">
		<label class="col-sm-3 col-form-labek">prix des materiaux</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="prixM" value="@Model.cP.prixMateriax" />
		</div>
	</div>

	<div class="row mb-4">
		<label class="col-sm-3 col-form-labek">Prix du main d'oeuvre</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="prixMO" value="@Model.cP.prixMainOeuvre" />
		</div>
	</div>

	<div class="row mb-2">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Modifier</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/CouvrePlancher/Index" role="button">Annuler</a>
		</div>
	</div>

</form>
